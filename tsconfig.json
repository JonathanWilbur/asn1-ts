{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "types",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false
    },
    "include": [
        "./source/*.ts",
        "./source/types/*.ts",
        "./source/codecs/*.ts"
    ]
}